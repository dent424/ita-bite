<div class="row">
	<div class="span7 offset4">
		<legend><%=t :machine_edit %></legend>
	</div>
</div>

<div class="row-fluid">
	<div class="span6 offset3">
		<%= form_for(@machine, :html=> {:class => 'form-horizontal'}) do |f| %>

		<div class="control-group">
			<label class="control-label">
				<%=t :machine_type %>
			</label>
			<div class="controls">
				<%= f.select :machine_type, options_for_select([["VMC","vmc"],["Manual Milling", "milling"],["Manual Lathe","lathe"],["Surface Grinding","sgrind"],["Cylindrical Grinding","cgrind"],["Drill Press","press","Wire EDM","edm"],["Other","other"]]) %>
			</div>
		</div>
		
		<div class="control-group">
			<label class="control-label">
				<%=t :machine_name %>
			</label>
			<div class="controls">
				<%= f.text_field :name %>
			</div>
		</div>

		<div class="control-group">
			<label class="control-label">
				<%=t :notes %>
			</label>
			<div class="controls">
				<%= f.text_field :notes %>
			</div>
		</div>

		<div class="control-group">
			<label class="control-label">
				<%=t :employees %>
			</label>
			<div class="controls">
				<%= f.select :employee_ids, Employee.all.collect{|x| [x.last_name, x.id]}, {}, :multiple => true %>
			</div>
		</div>

		<div class="control-group">
			<div class="controls">
				<%= f.submit t(:submit), :class => "btn" %>
			</div>
		</div>
	</div>
<div>

<% end %>