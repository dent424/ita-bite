<div class="row">
	<div class="span6 offset1">
		<h1><%= @employee.last_name %><%= @employee.first_name %></h1>
		<%= link_to t(:edit),  edit_employee_path(@employee), {:class => 'btn btn-primary'} %>
		<%= link_to t(:delete),employee_path(@machine), {:confirm => 'Are you sure?', :class => 'btn btn-danger', :method => :delete}  %>
	</div>
</div>
<% if @employee.machines.exists? %>
	<div class="row">
		<div class="span6 offset1">
			<table class="table">
				<thead>
					<tr>
						<th><%=t :machines %></th>
						<th><%=t :notes %></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @employee.machines.each do |machine| %>
					<tr>
						<td><%= link_to machine.name, machine %></td>
						<td><%= machine.notes %></td>
						<td><%= link_to t(:delete) ,employee_machine_approval_path(@employee, machine), {:confirm => 'Are you sure?', :method => :delete}  %></td>
					</tr>
					<% end %>	
				</tbody>
			</table>
		<% end %>
	</div>
</div>