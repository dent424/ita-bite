<body>
	<div class="row">
		<div class="span7 offset4">
			<legend>Edit Employee</legend>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span6 offset3">
			<%= form_for(@employee, :html=> {:class => 'form-horizontal'}) do |f| %>

			<div class="control-group">
				<label class="control-label">
					First Name
				</label>
				<div class="controls">
					<%= f.text_field :first_name %>
				</div>
			</div>
			
			<div class="control-group">
				<label class="control-label">
					Last Name
				</label>
				<div class="controls">
					<%= f.text_field :last_name %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">
					Approved Machines
				</label>
				<div class="controls">
					<%= f.select :machine_ids, Machine.all.collect{|x| [x.name, x.id]}, {}, :multiple => true %>
				</div>
			</div>

			<div class="control-group">
				<div class="controls">
					<%= f.submit "Submit", :class => "btn" %>
				</div>
			</div>
		</div>
	<div>
</body>

<% end %>