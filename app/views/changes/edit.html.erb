<body>	
	<div class="row-fluid">
		<div class="span7 offset4">
			<legend>Edit Change</legend>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span6 offset3">
			<%= form_for([@ingredient, @change], :html=> {:class => 'form-horizontal'}) do |f| %>

			<div class="control-group">
				<label class="control-label">
					Add/Remove
				</label>
				<div class="controls">
					<%= f.select(:add_remove, options_for_select([['Add', 1],['Use', 2]],2)) %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">
					Number
				</label>
				<div class="controls">
					<%= f.text_field :count %>
				</div>
			</div>

			<div class="control-group">
				<div class="controls">
					<%= f.submit "Submit", :class => "btn" %>
				</div>
			</div>
		</div>
	<div>
</body>

<% end %>