<body>
	<div class="row">
		<div class="span7 offset4">
			<legend>Edit Ingredient Order</legend>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span6 offset3">
			<%= form_for([@item, @square], :html=> {:class => 'form-horizontal'}) do |f| %>

			<div class="control-group">
				<label class="control-label">
					Material
				</label>
				<div class="controls">
					<%= f.text_field :material %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">
					Length
				</label>
				<div class="controls">
					<%= f.text_field :length %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">
					Width
				</label>
				<div class="controls">
					<%= f.text_field :width %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">
					Thickness
				</label>
				<div class="controls">
					<%= f.text_field :thickness %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">
					Number
				</label>
				<div class="controls">
					<%= f.text_field :pieces %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">
					Order Date
				</label>
				<div class="controls">
					<%= f.date_select :order_date, :start_year => Time.now.year - 1, :end_year => Time.now.year, :order => [:year, :month, :day]%>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">
					Delivery Date
				</label>
				<div class="controls">
					<%= f.date_select :delivery_date, :start_year => Time.now.year - 1, :end_year => Time.now.year, :order => [:year, :month, :day], :include_blank => true %>
				</div>
			</div>

			<div class="control-group">
				<div class="controls">
					<%= f.submit "Submit", :class => "btn" %>
				</div>
			</div>
		</div>
	<div>
</body>

<% end %>