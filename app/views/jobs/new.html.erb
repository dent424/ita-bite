<body>
<div class="row">
		<div class="span7 offset4">
			<legend>New Job</legend>
		</div>
	</div>

	<div class="row">
		<div class="span6 offset3">
			<%= nested_form_for(@job, :html=> {:class => 'form-horizontal'}) do |f| %>

			<div class="control-group">
				<label class="control-label">
					Job ID
				</label>
				<div class="controls">
					<%= f.text_field :name %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">
					Client
				</label>
				<div class="controls">
					<%= f.text_field :client %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">
					Billing No.
				</label>
				<div class="controls">
					<%= f.text_field :billing %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">
					Description
				</label>
				<div class="controls">
					<%= f.text_area :description, :rows => 5 %>
				</div>
			</div>


			<div class="control-group">
				<label class="control-label">
					Intake Date
				</label>
				<div class="controls">
					<%= f.date_select :in_date, :start_year => Time.now.year - 1, :end_year => Time.now.year, :order => [:year, :month, :day]%>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">
					Target Date
				</label>
				<div class="controls">
					<%= f.date_select :target, :start_year => Time.now.year, :end_year => Time.now.year + 1, :order => [:year, :month, :day]%>
				</div>
			</div>

			
			<%= f.fields_for :items do |item_form| %>

				<legend> Item </legend>

				<div class="control-group">
					<label class="control-label">
						Name
					</label>
					<div class="controls">
						<%= item_form.text_field :name %>
					</div>
				</div>

				<div class="control-group">
					<label class="control-label">
						Pieces
					</label>
					<div class="controls">
						<%= item_form.text_field :pieces %>
					</div>
				</div>

				<div class="control-group">
					<label class="control-label">
						Blue Print Number
					</label>
					<div class="controls">
						<%= item_form.text_field :blue_print_number %>
					</div>
				</div>

				<div class="control-group">
					<label class="control-label">
						Shape
					</label>
					<div class="controls">
						<%= item_form.text_field :round_square %>
					</div>
				</div>

				<%= item_form.link_to_remove "Remove this item" %>


			<% end %>


				<div class="row">
					<%= f.link_to_add "Add an item", :items %>
				</div>
			

			<div class="control-group">
				<div class="controls">
					<%= f.submit "Submit", :class => "btn" %>
				</div>
			</div>
		</div>
	<div>
</body>
<% end %>