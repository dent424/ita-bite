<body>
<div class="row">
		<div class="span7 offset4">
			<legend><%=t :job_edit %></legend>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span6 offset3">
			<%= form_for(@job, :html=> {:class => 'form-horizontal'}) do |f| %>

			<div class="control-group">
				<label class="control-label">
					<%=t :job_name %>
				</label>
				<div class="controls">
					<%= f.text_field :name %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">
					<%=t :client %>
				</label>
				<div class="controls">
					<%= f.select :client_id, Client.all.collect{|x| [x.name, x.id]}, {} %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">
					<%=t :contact %>
				</label>
				<div class="controls">
					<%= f.text_field :client %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">
					<%=t :job_billing %>
				</label>
				<div class="controls">
					<%= f.text_field :billing %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">
					<%=t :notes %>
				</label>
				<div class="controls">
					<%= f.text_area :description, :rows => 5 %>
				</div>
			</div>


			<div class="control-group">
				<label class="control-label">
					<%=t :job_intake %>
				</label>
				<div class="controls">
					<%= f.date_select :in_date, :start_year => Time.now.year - 1, :end_year => Time.now.year, :order => [:year, :month, :day]%>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">
					<%=t :job_target %>
				</label>
				<div class="controls">
					<%= f.date_select :target, :start_year => Time.now.year, :end_year => Time.now.year + 1, :order => [:year, :month, :day]%>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">
					:<%=t :job_complete %>
				</label>
				<div class="controls">
					<%= f.date_select :actual, :start_year => Time.now.year - 1 , :end_year => Time.now.year, :order => [:year, :month, :day], :include_blank => true %>
				</div>
			</div>

			<div class="control-group">
				<div class="controls">
					<%= f.submit t(:edit), :class => "btn" %>
				</div>
			</div>
		</div>
	<div>
</body>

<% end %>