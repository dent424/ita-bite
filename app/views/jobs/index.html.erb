<body>
	<div class="row">
	<div class="span8 offset1">
		<h1>Current Jobs</h1>
		<%= form_tag jobs_path, :method => 'get', :id => "jobs_search" do %>
			<div class="control-group">
				<div class="controls">
					<%= text_field_tag :search, params[:search] %>
					<%= submit_tag "Search", :name => nil %>
				</div>
			</div>
		<% end %>

		<div id="jobs"><%= render 'jobs' %></div>

		<%= will_paginate @job %>
	</div>
	</div>
</body>
