<body>
	<div class="row">
		<div class="span6 offset1">
			<h2> <%= @job.name %> (<%= @job.billing %>)</h2>
			<h3> <%= @job.client %>  </h3>
			
			<h4><table class ="table"> 
				<tbody>
					<tr>
						<td> Intake Date: </td>
						<td> <%= @job.in_date %></td>
					</tr>
					<tr>
						<td> Target Date: </td>
						<td> <%= @job.target %></td>
					</tr>
					<% if @job.actual? %>
						<tr>
							<td> Completion Date: </td>
							<td> <%= @job.actual %></td>
						</tr>

					<% else %>
						<tr>
							<td></td>
							<td><%= form_for(@job, :remote => true) do |t| %>
								<%= t.hidden_field :actual, :value => Date.today %>
								<%= t.submit "Complete Job" %></td>
							<% end %>
						</tr>
					<% end %>
				</tbody>
			</table></h4>
			<%= link_to "Add Item",  new_job_item_path(@job), {:class => 'btn btn-primary'} %>
			<%= link_to "Edit Job",  edit_job_path(@job), {:class => 'btn btn-primary'} %>
			<%= link_to " Delete",job_path(@job), {:confirm => 'Are you sure?', :class => 'btn btn-danger', :method => :delete}  %>
		</div>
	</div>
	<p></p>

	<div class="row">
		<div class="span6 offset1">
			<div id="show-item">
				<%= render "show-item" %>
			</div>
		</div>
	</div>
</body>