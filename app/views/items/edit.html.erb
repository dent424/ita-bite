<div class="row-fluid">
		<div class="span7 offset4">
			<legend>Edit Job</legend>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span6 offset3">
			<%= form_for([@job, @item], :html=> {:class => 'form-horizontal'}) do |f| %>

			<div class="control-group">
				<label class="control-label">
					Name
				</label>
				<div class="controls">
					<%= f.text_field :name %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">
					Pieces
				</label>
				<div class="controls">
					<%= f.text_field :pieces %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">
					Blue Print Number
				</label>
				<div class="controls">
					<%= f.text_field :blue_print_number %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">
					Completion Date
				</label>
				<div class="controls">
					<%= f.date_select :completion, :start_year => Time.now.year, :end_year => Time.now.year + 1, :order => [:year, :month, :day], :include_blank => true%>
				</div>
			</div>

			<div class="control-group">
				<div class="controls">
					<%= f.submit "Edit", :class => "btn" %>
				</div>
			</div>
		</div>
	<div>
</body>

<% end %>