<div class="row-fluid">
		<div class="span7 offset4">
			<legend><%=t :item_edit %></legend>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span6 offset3">
			<%= form_for([@job, @item], :html=> {:class => 'form-horizontal'}) do |f| %>

			<div class="control-group">
				<label class="control-label">
					ID
				</label>
				<div class="controls">
					<%= f.text_field :identification %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">
					<%=t :item_name %>
				</label>
				<div class="controls">
					<%= f.text_field :name %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">
					<%=t :pieces %>
				</label>
				<div class="controls">
					<%= f.text_field :pieces %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">
					<%=t :item_bp %>
				</label>
				<div class="controls">
					<%= f.text_field :blue_print_number %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">
					<%=t :round_square %>
				</label>
				<div class="controls">
					<%= f.text_field :round_square %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">
					<%=t :item_complete %>
				</label>
				<div class="controls">
					<%= f.date_select :completion, :start_year => Time.now.year, :end_year => Time.now.year + 1, :order => [:year, :month, :day], :include_blank => true%>
				</div>
			</div>

			<div class="control-group">
				<div class="controls">
					<%= f.submit t(:edit), :class => "btn" %>
				</div>
			</div>
		</div>
	<div>
</body>

<% end %>