<body>
	<div class="row">
		<div class="span7 offset4">
			<legend>New Job</legend>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span6 offset3">
			<%= form_for([@job, @item], :html=> {:class => 'form-horizontal'}) do |f| %>

			<div class="control-group">
				<label class="control-label">
					Name
				</label>
				<div class="controls">
					<%= f.text_field :name %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">
					Pieces
				</label>
				<div class="controls">
					<%= f.text_field :pieces %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">
					Blue Print Number
				</label>
				<div class="controls">
					<%= f.text_field :blue_print_number %>
				</div>
			</div>

			
			<div class="control-group">
				<div class="controls">
					<%= f.submit "Submit", :class => "btn" %>
				</div>
			</div>
		</div>
	<div>
</body>

<% end %>