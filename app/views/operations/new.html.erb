<body>
	<div class="row">
		<div class="span7 offset4">
			<legend>New Operation</legend>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span6 offset3">
			<%= form_for([@item, @operation], :html=> {:class => 'form-horizontal'}) do |f| %>

			<div class="control-group">
				<label class="control-label">
					Approval
				</label>
				<div class="controls">
					<%= f.select :approval_id, Approval.all.collect{|x| [x.machine.name + "-" +x.employee.first_name+x.employee.last_name, x.id]}, {} %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">
					Notes
				</label>
				<div class="controls">
					<%= f.text_field :notes %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">
					Start
				</label>
				<div class="controls">
					<%= f.datetime_select :start, :start_year => Time.now.year - 1, :end_year => Time.now.year, :order => [:year, :month, :day]%>
				</div>
			</div>

			<div class="control-group">
				<div class="controls">
					<%= f.submit "Submit", :class => "btn" %>
				</div>
			</div>
		</div>
	<div>
</body>

<% end %>